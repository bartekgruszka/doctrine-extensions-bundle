{% block fsi_file_widget %}
    {% spaceless %}
        {% if form.vars.data is not null %}
            {% if is_fsi_file(form.vars.data) %}
                <div>
                    <a href="{{ fsi_file_path(form.vars.data, 'uploaded') }}" data-for="{{ form.vars.id }}" target="_blank">{{ form.vars.data|fsi_file_basename }}</a>
                </div>
            {% elseif form.vars.valid %}
                <div>{{ 'fsi_file.refresh'|trans({}, 'FSiDoctrineExtensionsBundle') }}</div>
            {% endif %}
        {% endif %}
        {% set type = type|default('file') %}
        {{ block('form_widget') }}
    {% endspaceless %}
{% endblock %}

{% block fsi_removable_file_widget %}
    {% spaceless %}
        {% if form.file.vars.data is not null %}
            {% if is_fsi_file(form.file.vars.data) %}
                <div>
                    <a href="{{ fsi_file_path(form.file.vars.data, 'uploaded') }}" data-for="{{ form.file.vars.id }}"
                       target="_blank">{{ form.file.vars.data|fsi_file_basename }}</a>
                </div>
            {% elseif form.file.vars.valid %}
                <div>{{ 'fsi_file.refresh'|trans({}, 'FSiDoctrineExtensionsBundle') }}</div>
            {% endif %}
        {% endif %}
        {% set type = type|default('file') %}
        {{ form_widget(form.file) }}
        {% if form.file.vars.data is not null %}
            {% if is_fsi_file(form.file.vars.data) %}
                <p>
                    {{ form_widget(form.delete) }}&nbsp;
                    <label for="{{ form.delete.vars.id }}">{{ 'fsi_removable_file.confirm'|trans({}, 'FSiDoctrineExtensionsBundle') }}</label>
                </p>
            {% endif %}
        {% endif %}
    {% endspaceless %}
{% endblock %}
